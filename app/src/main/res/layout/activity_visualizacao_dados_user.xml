<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#459C7C">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#459C7C"
        tools:context=".visualizacao_dados_user">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="454dp"
            android:layout_height="1000dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/roundedbox2_removebg_preview" />

        <TextView
            android:id="@+id/nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nome"
            android:layout_marginTop="300dp"
            android:textColor="#459C7C"
            app:layout_constraintStart_toStartOf="@+id/inputName"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:id="@+id/inputName"
            android:layout_width="306dp"
            android:layout_height="46dp"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="18dp"
            android:ems="10"
            android:inputType="text"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nome"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="telefone"
            android:textColor="#459C7C"
            app:layout_constraintStart_toStartOf="@+id/inputName"
            app:layout_constraintTop_toBottomOf="@+id/inputName"/>

        <EditText
            android:id="@+id/inputTelefone"
            android:layout_width="306dp"
            android:layout_height="46dp"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="18dp"
            android:ems="10"
            android:inputType="text"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/endereco"/>

        <TextView
            android:id="@+id/endereco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="endereÃ§o"
            android:textColor="#459C7C"
            app:layout_constraintStart_toStartOf="@+id/inputTelefone"
            app:layout_constraintTop_toBottomOf="@+id/inputTelefone"/>

        <EditText
            android:id="@+id/inputEndereco"
            android:layout_width="306dp"
            android:layout_height="46dp"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="18dp"
            android:ems="10"
            android:inputType="text"
            app:layout_constraintBottom_toTopOf="@+id/endereco"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email:"
            android:textColor="#459C7C"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="@+id/inputEndereco"
            app:layout_constraintTop_toBottomOf="@+id/inputEndereco"/>




        <Button
            android:id="@+id/alterarBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="alterar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"/>

        <Button
            android:id="@+id/excluir"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Excluir Conta"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/alterarBTN"/>

        <Button
            android:id="@id/voltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="voltar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>